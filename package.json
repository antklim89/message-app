{
  "name": "message-app",
  "type": "module",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:**",
    "dev:next": "bunx --bun vite --host 0.0.0.0 --port 3000",
    "dev:typecheck": "bun run typecheck",
    "build": "bunx --bun vite build",
    "start": "vite preview --host 0.0.0.0 --port 3000",
    "lint": "biome check",
    "typecheck": "tsc --noEmit -w --preserveWatchOutput -p tsconfig.app.json",
    "typegen": "supabase gen types --local > ./src/shared/model/supabase-types.generated.ts",
    "dump": "bun run supabase db dump --local > supabase/dump.sql",
    "pull": "bun run supabase db pull --local"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.26.0",
    "@emotion/react": "^11.14.0",
    "@lexical/react": "^0.36.2",
    "@payloadcms/richtext-lexical": "^3.56.0",
    "@supabase/supabase-js": "^2.74.0",
    "@tanstack/react-form": "^1.19.3",
    "@tanstack/react-query": "^5.85.9",
    "@tanstack/react-query-devtools": "^5.85.9",
    "@tanstack/react-router": "^1.132.41",
    "date-fns": "^4.1.0",
    "lexical": "^0.36.2",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-icons": "^5.5.0",
    "supabase": "^2.48.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@faker-js/faker": "^10.0.0",
    "@tanstack/react-router-devtools": "^1.132.44",
    "@tanstack/router-plugin": "^1.132.41",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.2",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
